{
  "manifest_version": 3,
  "name": "NativeMimic - Text to Speech",
  "version": "3.31",
  "description": "Hear how text sounds in any language. High-quality text-to-speech with native pronunciation across 70+ languages.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://texttospeech.googleapis.com/*",
    "http://localhost:3000/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "supabase-client.js", 
        "google-tts-client.js",
        "unified-analytics-client.js",
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "NativeMimic Settings",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png", 
    "48": "icon48.png",
    "128": "icon128.png"
  }
}